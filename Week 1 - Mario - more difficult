//This is written in C
#include <cs50.h>
#include <stdio.h>

int main(void)
{
    //Ask user for the height
    int h;
    do
    {
        h = get_int("Height: ");
    }
    while (h < 1 || h > 8);

    //Making the first layer
    for (int i = 0; i < h; i++)
    {
        for (i = 1; i < h; i++)
        {
            printf(" ");
        }
        printf("#  #\n");
    }

    //Making the second layer
    for (int i = 1; i < h; i++)
    {
        for (i = 2; i < h; i++)
        {
            printf(" ");
        }
        printf("##  ##\n");
    }

    //Making the Third layer
    for (int i = 2; i < h; i++)
    {
        for (i = 3; i < h; i++)
        {
            printf(" ");
        }
        printf("###  ###\n");
    }

    //Making the Fourth layer
    for (int i = 3; i < h; i++)
    {
        for (i = 4; i < h; i++)
        {
            printf(" ");
        }
        printf("####  ####\n");
    }
    //Making the Fifth layer
    for (int i = 4; i < h; i++)
    {
        for (i = 5; i < h; i++)
        {
            printf(" ");
        }
        printf("#####  #####\n");
    }
    //Making the Sixth layer
    for (int i = 5; i < h; i++)
    {
        for (i = 6; i < h; i++)
        {
            printf(" ");
        }
        printf("######  ######\n");
    }
    //Making the Seventh layer
    for (int i = 6; i < h; i++)
    {
        for (i = 7; i < h; i++)
        {
            printf(" ");
        }
        printf("#######  #######\n");
    }
    //Making the Eigth layer
    for (int i = 7; i < h; i++)
    {
        for (i = 8; i < h; i++)
        {
            printf(" ");
        }
        printf("########  ########\n");
    }
}
